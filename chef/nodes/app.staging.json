{
  // run list
  "run_list": ["role[app]", "role[vagrant]"],

  // rubygems Rails application attributes
  "application": {
    "name": "rubygems",
    "repository": "https://github.com/rubygems/rubygems.org.git",
    "rails_env": "staging",
    "rails_root": "/applications/rubygems/staging",
    "server_names": ["rubygems.dev"],
    "use_ssl": true,
    "force_ssl": true,
    "ssl_key": "dev.rubygems.org.key",
    "ssl_cert": "dev.rubygems.org.crt",
    "app_server": {
      "name": "thin",
      "concurrency": 4
    }
  },

  // Override default monitors because we're not running postgres on app server
  "monit": {
    "monitors": [
      "cron", "filesystem", "ntp", "postfix", "redis", "nginx", "memcached"
    ]
  },

  "environment_variables": {
    // Rails application settings
    "RAILS_ENV":  "staging",
    "RACK_ENV":   "staging",
    "REDIS_URL":  "redis://localhost:6379/0",

    // OpenSSH server timeout
    "TMOUT": "600"

    // Ruby GC tuning
    // "RUBY_HEAP_MIN_SLOTS": 1000000,
    // "RUBY_HEAP_SLOTS_INCREMENT": 1000000,
    // "RUBY_HEAP_SLOTS_GROWTH_FACTOR": 1,
    // "RUBY_GC_MALLOC_LIMIT": 1000000000,
    // "RUBY_HEAP_FREE_MIN": 500000,
    // "RUBY_FREE_MIN": 500000
  },

  // Hostname
  "set_fqdn": "rubygems.dev",

  // memcached
  "memcached": {
    "memory": 128,
    "user":   "memcache",
    "port":   11211,
    "listen": "127.0.0.1"
  }
}
